<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- <link rel="stylesheet" href="server\templates\style.css">  -->
     <style>
        /* styles.css */

body {
    font-family: "Roboto", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.resume-container {
    min-height: 80vh;
    padding: 0px 20px;
    background-color: white;
}

.header {
    text-align: center;
    margin-bottom: 2px;
}

.name {
    font-size: 2em;
    font-weight: bold;
    text-align: center;
    margin-bottom: 5px;
}

.contact-info {
    margin: 5px 0;
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

.social-link {
    display: flex;
    align-items: center;
    color: #1e40af; /* Blue color */
    text-decoration: none;
    gap: 20px;
}

.section {
    margin: 20px 0;
}

.section-title {
    border-bottom: 1px solid black;
    padding-bottom: 5px;
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 8px;
    
}

.education-item,
.project-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 0px;
    
}
.education-item{
    margin-bottom: 5px;
}


.education-details {
    flex-grow: 1;
}

.degree {
    font-weight: bold;
    margin-block: 5px;
}

.date {
    margin-left: 10px;
}

.role{
    margin-block: 5px;
}

.description-list {
    list-style-type: disc;
    margin-left: -1.1rem;
}
.description-item{
    margin-left: 0;
}

.skill-type {
    font-weight: bold;
}

.skills-container {
    display: flex;
    gap: 30px;
}

.skill-item {
    display: flex;
    flex-wrap: wrap;
}

.skill {
    margin-right: 5px;
}
.institute{
    margin-top: 3px;
    margin-bottom: 0px;
}
.company{
    margin-top: 5px;
    margin-bottom: 0px;
}
.project-title{
    font-weight: "bold";
    margin-top: 5px;
}
.project-item{
    margin-top: 5px;
}
.experience-header{
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 0px;
    margin-bottom: 0px;

}
.date{
    margin-top: 5px;
    margin-bottom: 0px;
}
     </style>
</head>
<body>
    <div class="resume-container">
        <!-- HEADER -->
        <div class="header">
            <h2 class="name">
                <%= personalInfo.firstName %> <%= personalInfo.lastName %>
            </h2>
            <% if (personalInfo.phone && personalInfo.email) { %>
                <p class="contact-info">
                    <%= personalInfo.phone %> / <%= personalInfo.email %>
                </p>
            <% } %>
            <div class="social-links" style="margin-top: 8px;">
                <% if (personalInfo.github) { %>
                    <a href="<%= personalInfo.github %>" class="social-link" target="_blank">
                        <i class="fab fa-github"></i>
                        <span>GITHUB</span>
                    </a>
                <% } %>
                <% if (personalInfo.linkedin) { %>
                    <a href="<%= personalInfo.linkedin %>" class="social-link" target="_blank">
                        <i class="fab fa-github"></i>
                        <span>LINKEDIN</span>
                    </a>
                <% } %>
                <% if (personalInfo.portfolio) { %>
                    <a href="<%= personalInfo.portfolio %>" class="social-link" target="_blank">
                        <i class="fab fa-github"></i>
                        <span>PORTFOLIO</span>
                    </a>
                <% } %>
                <% if (personalInfo.leetcode) { %>
                    <a href="<%= personalInfo.leetcode %>" class="social-link" target="_blank">
                        <i class="fab fa-github"></i>
                        <span>LEETCODE</span>
                    </a>
                <% } %>
            </div>
        </div>

        <!-- EDUCATION -->
        <div class="section education">
            <h3 class="section-title">EDUCATION</h3>
            <% education.forEach(function(item, index) { %>
                <div class="education-item">
                    <div class="education-details">
                        <h4 class="degree"><%= item.degree %></h4>
                        <p class="institute"><%= item.institute %></p>
                    </div>
                    <p class="date">
                        <% if (item.start_date) { %>
                            <%= item.start_date %> - 
                        <% } %>
                        <%= item.end_date %>
                    </p>
                </div>
            <% }); %>
        </div>

        <!-- EXPERIENCE -->
        <div class="section experience">
            <h3 class="section-title">EXPERIENCE</h3>
            <div class="experience-list">
                <% experience.forEach(function(exp, index) { %>
                    <div class="experience-item">
                        <div class="experience-header">
                            <div>
                                <h4 class="role"><%= exp.role %></h4>
                                <p class="company"><%= exp.company %></p>
                            </div>
                            <p class="date">
                                <% if (exp.start_date) { %>
                                    <%= exp.start_date %> - 
                                <% } %>
                                <%= exp.end_date %>
                            </p>
                        </div>
                        <ul class="description-list" style="margin-top: 8px;">
                            <% exp.description.forEach(function(desc, i) { %>
                                <% if (desc) { %>
                                    <li class="description-item" key="<%= index + i %>"><%= desc %></li>
                                <% } %>
                            <% }); %>
                        </ul>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- PROJECTS -->
        <div class="section projects">
            <h3 class="section-title">PROJECTS</h3>
            <div class="projects-list">
                <% projects.forEach(function(item, index) { %>
                    <% if (item.title && item.description) { %>
                        <div class="project-item" key="<%= index %>">
                            <p style="margin-top: 3px;margin-bottom: 5px;">
                                <span class="project-title" style="font-weight: 700;font-size: 0.9em;"><%= item.title %> :</span> <%= item.description %>
                                <a href="<%= item.link %>" class="project-link">(Project Link)</a>
                            </p>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        </div>

        <!-- SKILLS -->
        <div class="section skills">
            <h3 class="section-title">SKILLS</h3>
            <div class="skills-container">
                <div class="skills-types" style="margin-bottom: 0;">
                    <% skills.forEach(function(item, index) { %>
                        <% if (item.skill_type) { %>
                            <h4 class="skill-type" style="margin-top: 3px;margin-bottom: 8px;" key="<%= index %>"><%= item.skill_type %>:</h4>
                        <% } %>
                    <% }); %>
                </div>
                <div class="skills-list" style="margin-bottom: 0;">
                    <% skills.forEach(function(item, index) { %>
                        <div class="skill-item"  key="<%= index %>">
                            <% item.skills.forEach(function(skill, idx) { %>
                                <% if (skill) { %>
                                    <p class="skill" style="margin-top: 3px;margin-bottom: 4.5px;"><%= skill %><%= idx !== item.skills.length - 1 ? ',' : '' %></p>
                                <% } %>
                            <% }); %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
